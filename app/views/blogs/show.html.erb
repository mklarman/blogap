<div id='blogHeading'><h2>SHOW BLOGS</h2></div>


<div id='listTitle'>Title: <%= @blog.title %></div>
<hr>

<div id='content'><%= @blog.content %><br>
<a href="/blogs/<%= @blog.id %>/edit">Edit Blog</a>
<%= link_to 'Delete', blog_path, method: :delete %>
</div>


<hr>

<div id='headingComment'>Create a comment</div>


<%= form_with(model: @comment, local: true) do |c| %>
<div id='commentForm'>
	<div class='c_form'><%=	c.text_area :content%></div>
	<div class='c_form'><%= c.hidden_field :blog_id, :value => @blog.id %></div>
	<div class='c_form'><%=	c.submit %></div>
	<% end %>
</div>



<br>
<% @blog.comments.each do |c| %>
<div id='commentsLog'>
	<div id='editContent'><a href="<%= "/comments/#{c.id}/edit" %>"><%= c.content %></a></div>
	<div id='deleteComm'><%= link_to 'Delete', "/comments/#{c.id}", method: :delete %></div>
</div>

<% end %>




